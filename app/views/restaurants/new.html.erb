<div class="container mt-5 text-center">
<h2>New Restaurant ⭐️</h2>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name%>
  <%= f.input :address %>
  <%= f.input :category, collection: Restaurant::CATEGORY %>
  <%= f.submit class: "btn btn-primary mt-4"%>
<% end %>
<p><%= link_to 'Back', root_path %></p>
</div>
